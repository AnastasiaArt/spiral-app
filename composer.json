{
    "name": "spiral/app",
    "type": "project",
    "license": "MIT",
    "description": "Spiral Skeleton Application",
    "homepage": "https://spiral.dev",
    "support": {
        "issues": "https://github.com/spiral/app/issues",
        "source": "https://github.com/spiral/app"
    },
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*",
        "doctrine/collections": "^1.8",
        "mongodb/mongodb": "^1.11",
        "nesbot/carbon": "^2.64",
        "php-http/message": "^1.11",
        "spiral-packages/cqrs": "^2.0",
        "spiral-packages/league-event": "^1.0",
        "spiral/cycle-bridge": "^2.1",
        "spiral/framework": "^3.3",
        "spiral/nyholm-bridge": "^1.3",
        "spiral/roadrunner-bridge": "^2.1",
        "spiral/validator": "^1.1",
        "symfony/var-dumper": "^6.1",
        "zbateson/mail-mime-parser": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "qossmic/deptrac-shim": "^1.0",
        "spiral/testing": "^2.2",
        "vimeo/psalm": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src",
            "Modules\\": "app/modules"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "extra": {
        "publish-cmd": "php app.php publish",
        "spiral": {
            "application-type": 0,
            "packages": [
                "ext-mbstring",
                "spiral/roadrunner-bridge",
                "spiral/nyholm-bridge",
                "spiral/sapi-bridge",
                "spiral/cycle-bridge",
                "doctrine/collections",
                "spiral/validator",
                "spiral-packages/league-event"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "spiral/composer-publish-plugin": true
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "php -r \"copy('.env.sample', '.env');\"",
            "php app.php encrypt:key -m .env",
            "php app.php configure -vv",
            "rr get-binary"
        ],
        "rr:download": "rr get-binary",
        "rr:download-protoc": "rr download-protoc-binary",
        "psalm:config": "psalm",
        "deptrack": [
            "deptrac analyze --report-uncovered"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
